<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/listItem_cardView"
    android:layout_width="match_parent"
    android:layout_height="170dp"
    app:cardCornerRadius="10dp"
    android:layout_margin="12dp"
    android:elevation="9dp"
    >

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cardBackground"
    >


    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/name_lbl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="8dp"
        android:layout_toEndOf="@id/locationImg_IMG"
        android:text="Name"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/distance_lbl"
        android:layout_width="150dp"
        android:layout_height="15dp"
        android:layout_below="@id/city_lbl"
        android:textSize="13dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@id/locationImg_IMG"
        android:text="Distance: "
        android:textColor="@color/gray" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/opening_hours_lbl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/distance_lbl"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@id/locationImg_IMG"
        android:text="Hours"
        android:textColor="@color/black"
        android:textSize="12dp"
        android:textStyle="bold" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/city_lbl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/name_lbl"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@id/locationImg_IMG"
        android:text="City"
        android:textColor="@color/purple_700"
        android:textSize="12dp"
        android:textStyle="bold" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/attributes_lbl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/opening_hours_lbl"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@id/locationImg_IMG"
        android:text=""
        android:textColor="@color/light_green"
        android:textSize="10dp"
        android:textStyle="bold" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/locationImg_IMG"
        android:layout_width="120dp"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        app:srcCompat="@android:drawable/ic_menu_gallery" />

    <RatingBar
        android:id="@+id/ratingBar"
        style="@style/Widget.AppCompat.RatingBar.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/attributes_lbl"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@id/locationImg_IMG"
        android:progressTint="@color/yellow"
        android:rating="3.4"
        android:secondaryProgressTint="@color/lightGray" />
</RelativeLayout>
</com.google.android.material.card.MaterialCardView>
